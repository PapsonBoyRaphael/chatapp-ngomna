# =============================================================================
# CONFIGURATION CHAT-FILES-SERVICE - EXEMPLE
# =============================================================================

# Application
NODE_ENV=development
PORT=8003
SERVICE_NAME=chat-files-service
SERVICE_VERSION=1.0.0

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/chat_files_db
MONGODB_OPTIONS=

# Redis (Cache et Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Stockage des fichiers
STORAGE_TYPE=development
# development: mongodb | cenadi | online
STORAGE_PATH=./storage
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# Stockage CENADI (Production)
CENADI_STORAGE_HOST=
CENADI_STORAGE_PORT=
CENADI_STORAGE_USERNAME=
CENADI_STORAGE_PASSWORD=
CENADI_STORAGE_PATH=

# Stockage en ligne (Développement)
ONLINE_STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=*

# Kafka (Optionnel)
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=chat-files-service
KAFKA_GROUP_ID=chat-files-group

# Services externes
AUTH_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8004

# Sécurité
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Logs
LOG_LEVEL=info
LOG_FILE=logs/chat-files-service.log

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15min

# Traitement des médias
IMAGE_QUALITY=80
THUMBNAIL_SIZE=150
VIDEO_COMPRESSION_QUALITY=medium
AUDIO_BITRATE=128k
