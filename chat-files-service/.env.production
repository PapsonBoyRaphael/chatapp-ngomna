# =============================================================================
# CONFIGURATION PRODUCTION - CHAT-FILES-SERVICE
# =============================================================================

NODE_ENV=production
PORT=8003
SERVICE_NAME=chat-files-service
SERVICE_VERSION=1.0.0

# MongoDB
MONGODB_URI=mongodb://mongo-prod:27017/chat_files_prod
MONGODB_OPTIONS=

# Redis
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Stockage (Mode production - Serveurs CENADI)
STORAGE_TYPE=cenadi
STORAGE_PATH=/cenadi/storage/chat-files
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# Stockage CENADI
CENADI_STORAGE_HOST=storage.cenadi.local
CENADI_STORAGE_PORT=22
CENADI_STORAGE_USERNAME=chatfiles
CENADI_STORAGE_PASSWORD=
CENADI_STORAGE_PATH=/data/chat-files

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=https://chat.cenadi.org

# Kafka
KAFKA_ENABLED=true
KAFKA_BROKERS=kafka-prod:9092
KAFKA_CLIENT_ID=chat-files-service-prod
KAFKA_GROUP_ID=chat-files-group-prod

# Services externes
AUTH_SERVICE_URL=https://auth.cenadi.org
USER_SERVICE_URL=https://users.cenadi.org
NOTIFICATION_SERVICE_URL=https://notifications.cenadi.org

# Sécurité
JWT_SECRET=
JWT_EXPIRES_IN=8h
BCRYPT_ROUNDS=12

# Logs
LOG_LEVEL=warn
LOG_FILE=/var/log/chat-files-service/production.log

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15min

# Traitement des médias
IMAGE_QUALITY=85
THUMBNAIL_SIZE=200
VIDEO_COMPRESSION_QUALITY=high
AUDIO_BITRATE=192k
