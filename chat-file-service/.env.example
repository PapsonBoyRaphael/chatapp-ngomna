# Chat File Service Configuration Example
# Copy to .env and configure with your actual values

# Environment
NODE_ENV= # Environment (development, production, test)
PORT= # Service port (default: 8003)
CHAT_FILE_SERVICE_PORT= # Chat file service port (default: 8003)
SERVER_ID= # Unique server identifier for scaling

# JWT Secret for token validation
JWT_SECRET= # Secret key for validating JWT tokens (must match auth-user-service)

# MongoDB
MONGODB_URI= # MongoDB connection URI (format: mongodb://host:port/database)

# Redis (Shared cache and online users)
ENABLE_REDIS= # Enable Redis for caching and online user tracking (true/false)
REDIS_HOST= # Redis hostname or IP address (default: localhost)
REDIS_PORT= # Redis port (default: 6379)
REDIS_PASSWORD= # Redis password (leave empty if no authentication)
REDIS_DB= # Redis database number (default: 0)
REDIS_FAMILY= # Redis socket family 4=IPv4, 6=IPv6 (default: 4)
REDIS_KEEP_ALIVE= # Enable TCP keep-alive for Redis (default: true)
REDIS_CONNECTION_TIMEOUT= # Connection timeout in milliseconds (default: 5000)
REDIS_MAX_RETRY_ATTEMPTS= # Maximum retry attempts for failed connections (default: 3)
REDIS_MEMORY_LIMIT_MB= # Memory limit for Redis operations in MB (default: 512)

# File Storage (S3 / MinIO)
S3_ENDPOINT= # S3/MinIO endpoint URL
S3_ACCESS_KEY= # S3/MinIO access key
S3_SECRET_KEY= # S3/MinIO secret key
S3_BUCKET= # S3 bucket name for file storage
S3_REGION= # S3 region (e.g., us-east-1)

# SFTP Storage (Optional)
SFTP_HOST= # SFTP server hostname (optional)
SFTP_PORT= # SFTP server port (default: 22)
SFTP_USER= # SFTP username (optional)
SFTP_PASS= # SFTP password (optional)
SFTP_REMOTE_PATH= # SFTP remote path for uploads (default: /uploads)

# Auth User Service (for user cache prewarming)
AUTH_USER_SERVICE_URL= # Auth user service URL for loading users into cache

# Storage and Logs Paths
STORAGE_BASE_PATH= # Base path for file storage (default: ./storage)
STORAGE_UPLOAD_PATH= # Path for uploaded files (default: ./storage/uploads)
STORAGE_TEMP_PATH= # Path for temporary files (default: ./storage/temp)
LOG_DIR= # Directory for application logs (default: ./logs)


