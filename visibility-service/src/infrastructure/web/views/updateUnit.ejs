<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Unit</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body class="bg-green-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center text-green-600">
      Update Unit for <%= agent.nom %> <%= agent.prenom %>
    </h1>
    <% if (error) { %>
      <p class="text-red-600 text-center mb-4"><%= error %></p>
    <% } %>
    <form action="/agents/<%= agent.matricule %>/unit" method="POST" class="space-y-4">
      <div>
        <label for="unitSearch" class="block text-sm font-medium text-gray-700">Unit</label>
        <input
          type="text"
          id="unitSearch"
          name="unitSearch"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
          placeholder="Search for a unit..."
          autocomplete="off"
        >
        <input type="hidden" id="unitId" name="unitId">
        <ul id="unitSuggestions" class="mt-2 border border-gray-300 rounded-md bg-white max-h-40 overflow-y-auto hidden"></ul>
      </div>
      <div>
        <label for="role" class="block text-sm font-medium text-gray-700">Role</label>
        <select
          id="role"
          name="role"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
          required
        >
          <option value="">Select a role</option>
          <% roles.forEach(role => { %>
            <option value="<%= role %>"><%= role.replace('_', ' ') %></option>
          <% }) %>
        </select>
      </div>
      <button
        type="submit"
        class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
      >
        Update Unit
      </button>
    </form>
  </div>
  <script src="/static/js/updateUnit.js"></script>