# Auth User Service Configuration Example
# Copy to .env and configure with your actual values

# Service Port
AUTH_USER_SERVICE_PORT= # Port on which the auth-user service will run (default: 8001)

# PostgreSQL Database
DB_HOST= # PostgreSQL hostname or IP address
DB_PORT= # PostgreSQL port (default: 5432)
DB_NAME= # Database name
DB_USER= # PostgreSQL username
DB_PASSWORD= # PostgreSQL password

# JWT Secret for token generation
JWT_SECRET= # Secret key for signing JWT tokens (must be strong and unique)

# Redis Configuration
REDIS_HOST= # Redis hostname or IP address (default: localhost)
REDIS_PORT= # Redis port (default: 6379)
REDIS_PASSWORD= # Redis password (leave empty if no authentication)
REDIS_DB= # Redis database number (default: 0)
REDIS_FAMILY= # Redis socket family 4=IPv4, 6=IPv6 (default: 4)
REDIS_KEEP_ALIVE= # Enable TCP keep-alive (default: false)
REDIS_CONNECTION_TIMEOUT= # Connection timeout in milliseconds (default: 5000)
REDIS_MAX_RETRY_ATTEMPTS= # Maximum retry attempts for failed connections (default: 3)
