# Environnement
NODE_ENV=development
LOG_LEVEL=info

# Serveur
PORT=3001
HOST=0.0.0.0

# Base de données
MONGODB_URI=mongodb://localhost:27017/chat_cenadi_dev
MONGODB_DB_NAME=chat_cenadi_dev
REDIS_URL=redis://localhost:6379

# Kafka (optionnel)
ENABLE_KAFKA=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=chat-files-service

# Services externes
AUTH_SERVICE_URL=http://localhost:3000
VISIBILITY_SERVICE_URL=http://localhost:3002

# WebSocket
ENABLE_WEBSOCKET=true
WEBSOCKET_CORS_ORIGIN=*

# Fichiers
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./temp/uploads

# Sécurité
JWT_SECRET=your-super-secret-jwt-key

# Développement
MOCK_EXTERNAL_SERVICES=true
SKIP_DB_INIT=false
DEBUG=true

# Kafka Warnings
KAFKAJS_NO_PARTITIONER_WARNING=1
