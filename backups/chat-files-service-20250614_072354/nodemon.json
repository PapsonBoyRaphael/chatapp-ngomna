{
  "watch": ["src/**/*"],
  "ext": "js,json",
  "ignore": [
    "src/**/*.test.js", 
    "tests/", 
    "logs/", 
    "temp/",
    "node_modules/",
    "coverage/"
  ],
  "exec": "node src/index.js",
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "info"
  },
  "delay": 1000,
  "restartable": "rs",
  "verbose": false
}
